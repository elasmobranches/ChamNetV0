    sys.exit(1)

# FLOPs ì¸¡ì •ì„ ìœ„í•œ ë¼ì´ë¸ŒëŸ¬ë¦¬ (fvcore ì‚¬ìš© ë¹„í™œì„±í™”: ê²°ê³¼ ì¼ê´€ì„± ìœ„í•´ thopë§Œ ì‚¬ìš©)
FVCORE_AVAILABLE = False

# ëŒ€ì•ˆ FLOPs ì¸¡ì • ë¼ì´ë¸ŒëŸ¬ë¦¬
try:
    import thop
    THOP_AVAILABLE = True
    print("âœ… thopë¥¼ ì„±ê³µì ìœ¼ë¡œ importí–ˆìŠµë‹ˆë‹¤.")
except ImportError:
    print("âš ï¸ thopê°€ ì„¤ì¹˜ë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤. pip install thopë¥¼ ì‹¤í–‰í•˜ì„¸ìš”.")
    THOP_AVAILABLE = False

# ============================================================================
# ESANet Multi-Task Model for FLOPs Measurement
# ============================================================================
# train_esanet_mtl_loss_fixed_print.pyì—ì„œ ì •ì˜ëœ ESANetMultiTask í´ë˜ìŠ¤ë¥¼ ì§ì ‘ ì‚¬ìš©


# ============================================================================
# FLOPs Measurement Functions
# ============================================================================
def measure_flops_fvcore(model: nn.Module, input_rgb: torch.Tensor, input_depth: torch.Tensor) -> Dict:
    """
    (ë¹„í™œì„±í™”) fvcore ì‚¬ìš©ì„ ì¤‘ë‹¨í–ˆìŠµë‹ˆë‹¤. ì¼ê´€ëœ ê²°ê³¼ ì œê³µì„ ìœ„í•´ thopë§Œ ì‚¬ìš©í•©ë‹ˆë‹¤.
    """
    return {"error": "fvcore disabled"}


def measure_flops_thop(model: nn.Module, input_rgb: torch.Tensor, input_depth: torch.Tensor) -> Dict:
    """
    thopë¥¼ ì‚¬ìš©í•˜ì—¬ FLOPsë¥¼ ì¸¡ì •í•©ë‹ˆë‹¤.
    
    Args:
        model: ì¸¡ì •í•  ëª¨ë¸
        input_rgb: RGB ì…ë ¥ í…ì„œ
        input_depth: Depth ì…ë ¥ í…ì„œ
        
    Returns:
        Dict: FLOPs ì¸¡ì • ê²°ê³¼
    """
    if not THOP_AVAILABLE:
        return {"error": "thop not available"}
    
    try:
        # ëª¨ë¸ì„ í‰ê°€ ëª¨ë“œë¡œ ì„¤ì •
        model.eval()
        
        # thopëŠ” ë‹¨ì¼ ì…ë ¥ë§Œ ì§€ì›í•˜ë¯€ë¡œ, RGBì™€ Depthë¥¼ ì—°ê²°í•˜ì—¬ ì²˜ë¦¬
        # ëª¨ë¸ ë˜í¼ í´ë˜ìŠ¤ ì •ì˜
        class ModelWrapper(nn.Module):
            def __init__(self, original_model):
                super().__init__()
                self.model = original_model
            
            def forward(self, x):
                # RGBì™€ Depthë¥¼ ë¶„ë¦¬
                rgb = x[:, :3, :, :]
                depth = x[:, 3:4, :, :]
                seg_logits, depth_pred = self.model(rgb, depth)
                return seg_logits, depth_pred
        
        # ë˜í¼ ëª¨ë¸ ìƒì„±
        wrapper_model = ModelWrapper(model)
        wrapper_model.eval()
        
        # RGBì™€ Depthë¥¼ ì—°ê²°í•œ ì…ë ¥ ìƒì„±
        combined_input = torch.cat([input_rgb, input_depth], dim=1)
        
        # FLOPsì™€ íŒŒë¼ë¯¸í„° ìˆ˜ ì¸¡ì •
        flops, params = thop.profile(wrapper_model, inputs=(combined_input,), verbose=False)
        
        return {
            "total_flops": flops,
            "total_params": params,
            "method": "thop"
        }
    except Exception as e:
        return {"error": f"thop measurement failed: {e}"}


def measure_model_parameters(model: nn.Module) -> Dict:
    """
    ëª¨ë¸ì˜ íŒŒë¼ë¯¸í„° ìˆ˜ë¥¼ ì¸¡ì •í•©ë‹ˆë‹¤.
    
    Args:
        model: ì¸¡ì •í•  ëª¨ë¸
        
    Returns:
        Dict: íŒŒë¼ë¯¸í„° ìˆ˜ ì •ë³´
    """
    total_params = sum(p.numel() for p in model.parameters())
    trainable_params = sum(p.numel() for p in model.parameters() if p.requires_grad)
    
    # ëª¨ë¸ í¬ê¸° ê³„ì‚° (MB)
    param_size = 0
    buffer_size = 0
    
    for param in model.parameters():
        param_size += param.nelement() * param.element_size()
    
    for buffer in model.buffers():
        buffer_size += buffer.nelement() * buffer.element_size()
    
    size_all_mb = (param_size + buffer_size) / 1024**2
    
    return {
        "total_params": total_params,
        "trainable_params": trainable_params,
        "model_size_mb": size_all_mb
    }




# ============================================================================
# Main FLOPs Measurement Function
# ============================================================================
def measure_esanet_flops(
    height: int = 480,
    width: int = 640,
    batch_size: int = 1,
    num_classes: int = 7,
    encoder_rgb: str = 'resnet34',
    encoder_depth: str = 'resnet34',
    encoder_block: str = 'NonBottleneck1D',
    pretrained_path: Optional[str] = None,
    device: str = 'cuda' if torch.cuda.is_available() else 'cpu'
) -> Dict:
    """
    ESANet ë©€í‹°íƒœìŠ¤í¬ ëª¨ë¸ì˜ FLOPsë¥¼ ì¸¡ì •í•©ë‹ˆë‹¤.
    
    Args:
        height: ì…ë ¥ ì´ë¯¸ì§€ ë†’ì´
        width: ì…ë ¥ ì´ë¯¸ì§€ ë„ˆë¹„
        batch_size: ë°°ì¹˜ í¬ê¸°
        num_classes: ì„¸ê·¸ë©˜í…Œì´ì…˜ í´ë˜ìŠ¤ ìˆ˜
        encoder_rgb: RGB ì¸ì½”ë” ë°±ë³¸
        encoder_depth: Depth ì¸ì½”ë” ë°±ë³¸
        encoder_block: ì¸ì½”ë” ë¸”ë¡ íƒ€ì…
        pretrained_path: ì‚¬ì „í›ˆë ¨ëœ ê°€ì¤‘ì¹˜ ê²½ë¡œ
        device: ê³„ì‚° ë””ë°”ì´ìŠ¤
        
    Returns:
        Dict: FLOPs ì¸¡ì • ê²°ê³¼
    """
    print("=" * 80)
    print("ESANet Multi-Task Model FLOPs Measurement")
    print("=" * 80)
    print(f"Input size: {height}x{width}")
    print(f"Batch size: {batch_size}")
    print(f"Device: {device}")
    print("=" * 80)
    
    # ë””ë°”ì´ìŠ¤ ì„¤ì •
    device = torch.device(device)
    
    # ëª¨ë¸ ì´ˆê¸°í™” (train_esanet_mtl_loss_fixed_print.pyì—ì„œ ì •ì˜ëœ í´ë˜ìŠ¤ ì‚¬ìš©)
    print("ğŸ”§ Initializing ESANet Multi-Task Model...")
    model = ESANetMultiTask(
        height=height,
        width=width,
        num_classes=num_classes,
        encoder_rgb=encoder_rgb,
        encoder_depth=encoder_depth,
        encoder_block=encoder_block,
        pretrained_path=pretrained_path,
    )
    
    # ëª¨ë¸ì„ ë””ë°”ì´ìŠ¤ë¡œ ì´ë™
    model = model.to(device)
    
    # ì…ë ¥ í…ì„œ ìƒì„±
    print(f"ğŸ“Š Creating input tensors...")
    input_rgb = torch.randn(batch_size, 3, height, width, device=device)
    input_depth = torch.randn(batch_size, 1, height, width, device=device)
    
    print(f"RGB input shape: {input_rgb.shape}")
    print(f"Depth input shape: {input_depth.shape}")
    
    # íŒŒë¼ë¯¸í„° ìˆ˜ ì¸¡ì •
    print("\nğŸ“ˆ Measuring model parameters...")
    param_info = measure_model_parameters(model)
    print(f"Total parameters: {param_info['total_params']:,}")
    print(f"Trainable parameters: {param_info['trainable_params']:,}")
    print(f"Model size: {param_info['model_size_mb']:.2f} MB")
    
    # FLOPs ì¸¡ì •
    results = {
        "model_info": {
            "height": height,
            "width": width,
            "batch_size": batch_size,
            "num_classes": num_classes,
            "encoder_rgb": encoder_rgb,
            "encoder_depth": encoder_depth,
            "encoder_block": encoder_block,
            "device": str(device)
        },
        "parameters": param_info,
        "flops_measurements": {}
    }
    
    # fvcore ì¸¡ì • ë¹„í™œì„±í™” (thopë§Œ ì‚¬ìš©)
    
    # thopë¥¼ ì‚¬ìš©í•œ FLOPs ì¸¡ì •
    if THOP_AVAILABLE:
        print("\nğŸ” Measuring FLOPs with thop...")
        thop_result = measure_flops_thop(model, input_rgb, input_depth)
        if "error" not in thop_result:
            print(f"Total FLOPs (thop): {thop_result['total_flops']:,}")
            print(f"Total parameters (thop): {thop_result['total_params']:,}")
            results["flops_measurements"]["thop"] = thop_result
        else:
            print(f"thop measurement failed: {thop_result['error']}")
    
    # ê²°ê³¼ ìš”ì•½ (ì¤‘ë³µ ì œê±°)
    
    return results


# ============================================================================
# Main Function
# ============================================================================
def main():
    """
    ë©”ì¸ í•¨ìˆ˜: 512x512 ì…ë ¥ í¬ê¸°ë¡œ FLOPs ì¸¡ì •ì„ ìˆ˜í–‰í•©ë‹ˆë‹¤.
    """
    print("ğŸš€ Starting ESANet Multi-Task FLOPs Measurement...")
    print("ğŸ“ Target input size: 512x512 (practical usage)")
    
    try:
        # ì‹¤ì œ ì‚¬ìš©í•  ì…ë ¥ í¬ê¸°ë¡œ ì¸¡ì •
        result = measure_esanet_flops(
            height=512,
            width=512,
            batch_size=1,
            num_classes=7,
            encoder_rgb='resnet34',
            encoder_depth='resnet34',
            encoder_block='NonBottleneck1D',
            pretrained_path=None,  # ì‚¬ì „í›ˆë ¨ ê°€ì¤‘ì¹˜ ì—†ì´ ì¸¡ì •
            device='cuda' if torch.cuda.is_available() else 'cpu'
        )
        
        # ìµœì¢… ê²°ê³¼ ìš”ì•½
        print(f"\n{'='*80}")
        print("ğŸ“Š ESANet Multi-Task Model Performance Summary")
        print(f"{'='*80}")
        
        params = result["parameters"]["total_params"]
        size_mb = result["parameters"]["model_size_mb"]
        
        print(f"Input Size: 512x512")
        print(f"Parameters: {params:,}")
        print(f"Model Size: {size_mb:.2f} MB")
        
        if "thop" in result["flops_measurements"]:
            macs = result["flops_measurements"]["thop"]["total_flops"]
            approx_flops = macs * 2
            print(f"Total MACs (thop): {macs:,}")
            print(f"Approx FLOPs (~2x MACs): {approx_flops:,}")
            print(f"MACs per pixel: {macs / (512 * 512):.2f}")
            print(f"FLOPs per pixel (approx): {approx_flops / (512 * 512):.2f}")
        
        print(f"{'='*80}")
        print("âœ… FLOPs measurement completed!")
        
    except Exception as e:
        print(f"âŒ Error during measurement: {e}")
        import traceback
        traceback.print_exc()


if __name__ == "__main__":
    main()