    # train_esanet_mtl_loss_fixed_print.pyì—ì„œ ESANetMultiTask í´ë˜ìŠ¤ import
    from train_esanet_mtl_appm import ESANetMultiTask
    ESANET_AVAILABLE = True
    print("âœ… ESANetMultiTask ëª¨ë¸ì„ ì„±ê³µì ìœ¼ë¡œ importí–ˆìŠµë‹ˆë‹¤.")
except ImportError as e:
